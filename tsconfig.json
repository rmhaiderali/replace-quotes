{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["es2021", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
